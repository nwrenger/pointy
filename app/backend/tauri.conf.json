{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pointy",
  "version": "0.2.0",
  "identifier": "dev.nwrenger.pointy",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "pointy",
        "label": "main",
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "shadow": false,
        "alwaysOnTop": true,
        "backgroundThrottling": "disabled",
        "width": 200,
        "height": 200
      },
      {
        "title": "pointy Settings",
        "url": "settings",
        "label": "settings",
        "decorations": false,
        "shadow": false,
        "transparent": true,
        "visible": false,
        "backgroundThrottling": "disabled",
        "width": 500,
        "height": 700,
        "minWidth": 350,
        "minHeight": 350
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEREREZCQzMyRkY0MThGMUQKUldRZGowSC9NcnpmM1JUeCtpSHVrRGt5OWRTbWZFWVNYYjE5aXBvdUJpdmJQcWpLaWFYdlZnZm0K",
      "endpoints": [
        "https://github.com/nwrenger/pointy/releases/latest/download/latest.json"
      ]
    }
  }
}
